<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TransTracker.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Welcome to Tracker App"/>
            <Button Text="Login" x:Name="Login" Clicked="login"/>
            <Button Text="Track without login" x:Name="Nologin" Clicked="withoutLogin"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
