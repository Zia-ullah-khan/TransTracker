<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TransTracker.AskForTransID"
             Title="AskForTransID">
    <VerticalStackLayout>
        <Grid x:Name="TransIdPopup" BackgroundColor="White" IsVisible="True" Padding="10">
            <Entry x:Name="TransID" BackgroundColor="White" Placeholder="Enter Transport ID here"/>
        </Grid>
        <Button Text="Submit" Clicked="Popup"/>
    </VerticalStackLayout>
</ContentPage>